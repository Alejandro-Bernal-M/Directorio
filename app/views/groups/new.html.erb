<section class="register">
  <h1>Creando un nuevo grupo</h1>
  <%= button_to 'AtrÃ¡s', :back, class: 'btn' %>
  <% if @group.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@group.errors.count, "errores") %> prohiben crear el grupo:</h2>

    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message.split(' ', 2).second %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%= form_for(:group, url: groups_path, local: true, html: { class: 'new_user' }) do |f| %>
    <div class="field">
      <%= f.label :name, 'Nombre del grupo' %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :slogan, 'Slogan del grupo' %>
      <%= f.text_field :slogan %>
    </div>

     <div class="field">
      <%= f.label :color %>
      <%= f.color_field :color, value: "#FFFFFF" %>
    </div>

      <%= f.hidden_field :director_id, value: current_director.id %>

    <div class="actions">
      <%= f.submit 'Crear grupo', class: 'btn' %>
    </div>
  <% end %>
</section>