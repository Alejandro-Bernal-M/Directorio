<h2>Hola <%= @director.username %></h2>
<p>Estos son tus grupos: </p>
<% @groups_with_requests.each do |group| %>
  <p>Grupo:</p>
  <%= group[:group_name] %>
  <p>Miembros</p>
  <% group[:group_members].each do |member| %>
    <p><%= member.full_name %></p>
    <%= link_to 'Ver perfil', user_path(member.id) %>
    <%= button_to 'Eliminar del grupo', groups_user_path(user_id: member.id, group_id: group[:group_id]), method: :delete %>
  <% end %>
  <p> Solicitudes:</p>
  <% if group[:requests].present? %>
    <% group[:requests].each do |request| %>
      <div>
        <p><%= request[:user].full_name %></p>
        <p><%= request[:user].email %></p>
        <div>
          <%= link_to 'Ver perfil', user_path(request[:user].id) %>
          <%= button_to 'Aceptar', groups_users_path(user_id: request[:user].id, request_id: request[:request_id], group_id: group[:group_id]), method: :create %>
          <%= button_to 'Rechazar', assignation_path(request_id: request[:request_id]), method: :delete %>
        </div>
      </div>
    <% end %>
    <% else %>
      <p> Sin solicitudes </p>
  <% end %>
<% end %>
