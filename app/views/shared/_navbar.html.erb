<header>
  <nav>
    <% if request.path != root_path %>
      <%= link_to 'Inicio', root_path %>
    <% end %>
    <% if current_user %>
      <% if request.path != user_path(current_user) %>
        <%= link_to "Mi perfil", user_path(current_user) %>
      <% end %>
      <%= link_to "Cerrar sesión", destroy_user_session_path, data: { "turbo-method": :delete } %>
    <% else %>
      <%if !current_director %>
        <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link"  %>
      <% end %>
      <%if current_director %>
        <%= link_to 'Mis grupos', director_path(current_director) %>
        <%= link_to "Cerrar sesión", logout_path, data: { "turbo-method": :delete } %>
      <% end %>
    <% end %>
  </nav>
</header>